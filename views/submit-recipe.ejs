
<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share your incredible recipes with culinary enthusiasts around the world. Start by filling out our form on MealMuse!</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>
 <div class="col-8">

    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control">
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Recipe Name</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>

        <div class="col-12">
          <h2>Nutrition: per serving</h2>
          
        </div>

        <div class="col-12">
          <label for="kcal" class="form-label">kcal</label>
          <input type="text" name="kcal" id="kcal" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="fat" class="form-label">Fat (g)</label>
          <input type="text" name="fat" id="fat" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="saturates" class="form-label">Saturated Fat (g)</label>
          <input type="text" name="saturates" id="saturates" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="carbs" class="form-label">Carbs (g)</label>
          <input type="text" name="carbs" id="carbs" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="sugar" class="form-label">Sugar (g)</label>
          <input type="text" name="sugar" id="sugar" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="fiber" class="form-label">Fiber (g)</label>
          <input type="text" name="fiber" id="fiber" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="protein" class="form-label">Protein (g)</label>
          <input type="text" name="protein" id="protein" class="form-control">
        </div>
        
        <div class="col-12">
          <label for="salt" class="form-label">Salt (g)</label>
          <input type="text" name="salt" id="salt" class="form-control">
        </div>
        
